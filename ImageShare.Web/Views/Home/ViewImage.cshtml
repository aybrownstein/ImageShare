@model ImageViewModel

<div class="row">
    <input type="hidden" id="image-id" value="@Model.Image.Id" />
    <div class="col-md-10 col-md-offset-i well">
        <h1>@Model.Image.Title</h1>
        <img src="/Uploads/@Model.Image.FileName" style="width: 900px;" /><br /><br />
        <button id="like-button" class="btn btn-primary btn-lg">LIKE</button> Current Likes:<span id="likes-count">@Model.Image.Likes</span> 
    </div>
</div>

@section scripts{ 
<script src="~/js/viewImage.js"></script>
}